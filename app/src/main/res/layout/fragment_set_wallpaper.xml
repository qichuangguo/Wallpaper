<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="5000dp"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="#5c000000">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:src="@drawable/ic_share_white_24dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:src="@drawable/ic_collections_bookmark_white_24dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/set_wallpaper"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_dewnlaod"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:src="@drawable/ic_cloud_download_white_24dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_more_vert_white_24dp"/>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
